import discord
from discord.ext import commands
import database

class XPCog(commands.Cog):
    def __init__(self, bot):
        self.bot = bot

    async def get_xp(self, guild_id, user_id):
        data = await database.get_user_data(guild_id, user_id)
        return data

    async def add_xp(self, guild_id, user_id, amount):
        leveled_up = await database.add_user_xp(guild_id, user_id, amount)
        return leveled_up

    def xp_to_next_level(self, level):
        return 100 * level * level

    def get_progress_bar(self, current_xp, level):
        next_level_xp = self.xp_to_next_level(level)
        progress = min(current_xp / next_level_xp * 20, 20)
        bar = "‚ñà" * int(progress) + "‚ñë" * (20 - int(progress))
        percent = int((current_xp / next_level_xp) * 100)
        return f"`[{bar}] {percent}%`"

    @discord.app_commands.command(name="userinfo", description="User XP & Level")
    async def userinfo(self, interaction: discord.Interaction, user: discord.Member = None):
        user = user or interaction.user
        data = await self.get_xp(interaction.guild.id, user.id)

        embed = discord.Embed(title=f"{user.display_name} Profile", color=0xFAD5A5)
        embed.add_field(name="‚≠ê Level", value=f"**{data['level']}**", inline=True)
        embed.add_field(name="‚ö° XP", value=f"**{data['xp']}**", inline=True)
        embed.add_field(name=f"üìà Progress to L{data['level']+1}", value=self.get_progress_bar(data['xp'], data['level']), inline=False)
        embed.set_thumbnail(url=user.display_avatar.url)
        await interaction.response.send_message(embed=embed)

async def setup(bot):
    await database.init()  # Initialize DB connection when loading the cog
    await bot.add_cog(XPCog(bot))
    print("‚úÖ XP Cog loaded - DB enabled!")
